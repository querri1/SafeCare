<view class="navigation-bar">
  <view class="navigation-bar__inner" style="color: {{color}}; background: {{background}}; padding-top: {{safeAreaTop}};">
    <!-- 左侧按钮 -->
    <view class="navigation-bar__left">
      <block wx:if="{{back}}">
        <view class="back-button" bindtap="back">
          <text class="back-icon">‹</text>
        </view>
      </block>
      <block wx:else>
        <slot name="left"></slot>
      </block>
    </view>

    <!-- 标题 -->
    <view class="navigation-bar__center">
      <block wx:if="{{title}}">
        <text class="title">{{title}}</text>
      </block>
      <block wx:else>
        <slot name="center"></slot>
      </block>
    </view>
    
    <!-- 右侧按钮 -->
    <view class="navigation-bar__right">
      <slot name="right"></slot>
    </view>
  </view>
</view>
