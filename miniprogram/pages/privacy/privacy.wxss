/* 隐私设置页面样式 */
.scrollarea {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
}

.privacy-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.privacy-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.privacy-info {
  flex: 1;
}

.privacy-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.privacy-desc {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
  line-height: 1.5;
}

.danger-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.danger-header {
  margin-bottom: 20rpx;
}

.danger-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #dc2626;
  display: block;
  margin-bottom: 8rpx;
}

.danger-desc {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
}

.btn-danger {
  background: #fee2e2;
  color: #dc2626;
  border: 1rpx solid #fecaca;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.info-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.info-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 20rpx;
}

.info-text {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.8;
  display: block;
  margin-bottom: 12rpx;
}

