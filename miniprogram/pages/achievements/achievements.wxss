/* 成就徽章页面样式 */
.scrollarea {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
}

/* 未登录提示 */
.login-prompt {
  background: white;
  border-radius: 16rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.prompt-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.prompt-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 16rpx;
}

.prompt-desc {
  font-size: 28rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 40rpx;
}

.btn-login {
  background: linear-gradient(135deg, #34D399, #A3E635);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 成就统计 */
.stats-section {
  display: flex;
  justify-content: space-around;
  background: white;
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.stats-item {
  text-align: center;
}

.stats-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #34D399;
  display: block;
  margin-bottom: 12rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
}

/* 成就列表 */
.achievements-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 30rpx;
}

.achievements-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.achievement-item {
  position: relative;
  background: #f9fafb;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  border: 2rpx solid #e5e7eb;
  transition: all 0.3s ease;
}

.achievement-item.achievement-unlocked {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  border-color: #fbbf24;
  box-shadow: 0 4rpx 12rpx rgba(251, 191, 36, 0.3);
}

.achievement-item.achievement-locked {
  opacity: 0.6;
}

.achievement-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
  filter: grayscale(0);
}

.achievement-locked .achievement-icon {
  filter: grayscale(100%);
}

.achievement-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.achievement-locked .achievement-name {
  color: #9ca3af;
}

.achievement-desc {
  font-size: 22rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 16rpx;
}

.achievement-progress {
  margin-top: 16rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #e5e7eb;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #34D399, #A3E635);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.achievement-locked .progress-fill {
  background: #d1d5db;
}

.progress-text {
  font-size: 20rpx;
  color: #9ca3af;
}

.achievement-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(16, 185, 129, 0.4);
}

