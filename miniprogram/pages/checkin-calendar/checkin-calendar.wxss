/* 打卡日历页面样式 */
.scrollarea {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
}

/* 未登录提示 */
.login-prompt {
  background: white;
  border-radius: 16rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.prompt-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.prompt-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 16rpx;
}

.prompt-desc {
  font-size: 28rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 40rpx;
}

.btn-login {
  background: linear-gradient(135deg, #34D399, #A3E635);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 月份选择器 */
.month-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.month-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #34D399;
  font-weight: bold;
  background: #f3f4f6;
  border-radius: 50%;
}

.month-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

/* 日历 */
.calendar-wrapper {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  margin-bottom: 20rpx;
}

.weekday {
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #6b7280;
  padding: 10rpx 0;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  background: #f9fafb;
  position: relative;
  padding: 8rpx;
  cursor: pointer;
}

.calendar-day.day-checked {
  background: linear-gradient(135deg, #34D399, #A3E635);
}

.calendar-day.day-other-month {
  opacity: 0.3;
}

.day-number {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 500;
}

.day-checked .day-number {
  color: white;
  font-weight: 600;
}

.check-dot {
  position: absolute;
  bottom: 8rpx;
  width: 8rpx;
  height: 8rpx;
  background: white;
  border-radius: 50%;
}

/* 图例 */
.legend {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.legend-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 6rpx;
  background: #f9fafb;
}

.legend-dot.checked {
  background: linear-gradient(135deg, #34D399, #A3E635);
}

.legend-text {
  font-size: 24rpx;
  color: #6b7280;
}

