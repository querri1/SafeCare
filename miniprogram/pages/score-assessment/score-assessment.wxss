/* 评分评估页面样式 */
.scrollarea {
  height: 100vh;
  background: linear-gradient(180deg, #f0fdf4 0%, #f5f5f5 100%);
}

.container {
  min-height: 100vh;
  padding: 40rpx 30rpx;
  padding-bottom: 120rpx;
  position: relative;
  overflow: hidden;
}

/* 装饰性背景 */
.decoration-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  z-index: 0;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(163, 230, 53, 0.1), rgba(52, 211, 153, 0.1));
  opacity: 0.6;
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -200rpx;
  right: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: 200rpx;
  left: -150rpx;
}

.header-section {
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
  text-align: center;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.date-text {
  font-size: 44rpx;
  font-weight: 700;
  color: #1f2937;
  display: block;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #34D399, #A3E635);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.daily-reminder {
  font-size: 28rpx;
  color: #34D399;
  display: block;
  line-height: 1.8;
  margin-top: 16rpx;
  padding: 20rpx;
  background: rgba(52, 211, 153, 0.1);
  border-radius: 12rpx;
  border-left: 4rpx solid #34D399;
}

/* 评分表样式 */
.scores-section {
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
}

.score-block {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(52, 211, 153, 0.15);
  border: 2rpx solid rgba(52, 211, 153, 0.1);
}

.score-block-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0fdf4;
}

.score-block-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.score-total {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.total-label {
  font-size: 24rpx;
  color: #6b7280;
}

.total-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #34D399;
}

.score-items {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.score-item {
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.score-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.score-item-header {
  margin-bottom: 20rpx;
}

.score-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.score-hint {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
  display: block;
}

.score-buttons {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.score-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  background: #f3f4f6;
  color: #6b7280;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.score-btn.active {
  background: linear-gradient(135deg, #34D399, #A3E635);
  color: white;
  border-color: #34D399;
  box-shadow: 0 4rpx 12rpx rgba(52, 211, 153, 0.3);
}

.score-btn:active {
  transform: scale(0.95);
}

.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 30rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 10;
}

.btn-save {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #34D399, #A3E635);
  color: white;
  border-radius: 16rpx;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 8rpx 20rpx rgba(52, 211, 153, 0.3);
  transition: all 0.3s ease;
}

.btn-save:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(52, 211, 153, 0.3);
}

.btn-icon {
  font-size: 36rpx;
}

