/* 个人中心页面样式 */
.scrollarea {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  padding-top: 40rpx;
}

/* 用户信息 */
.user-profile {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.avatar-wrapper {
  position: relative;
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.avatar-edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 36rpx;
  height: 36rpx;
  background: #34D399;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  border: 2rpx solid white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.user-info {
  flex: 1;
}

.user-name-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
}

.edit-nickname-btn {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #34D399;
  padding: 8rpx;
  cursor: pointer;
}

.user-age-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.user-age {
  font-size: 28rpx;
  color: #6b7280;
  display: block;
}

.edit-age-btn {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #34D399;
  padding: 8rpx;
  cursor: pointer;
}

.user-title {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 20rpx;
}

.user-stats {
  display: flex;
  gap: 40rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #34D399;
  display: block;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 20rpx;
  color: #9ca3af;
  display: block;
}

/* 功能菜单 */
.menu-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.menu-group {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  background: #f3f4f6;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.menu-icon .icon-img {
  width: 32rpx;
  height: 32rpx;
}

.menu-icon .icon {
  font-size: 28rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
}

.menu-arrow {
  margin-left: 20rpx;
}

.arrow {
  font-size: 24rpx;
  color: #9ca3af;
}

