.page-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
  padding-bottom: 40rpx;
}

/* 统计卡片 */
.stats-card {
  background: linear-gradient(135deg, #34D399, #A3E635);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 4rpx 16rpx rgba(52, 211, 153, 0.3);
}

.stats-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.stats-icon {
  font-size: 40rpx;
}

.stats-content {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.stats-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

.stats-value {
  font-size: 32rpx;
  font-weight: 700;
  color: white;
}

.stats-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 视频卡片 */
.video-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 24rpx;
}

.video-player {
  width: 100%;
  height: 420rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.video-loading {
  width: 100%;
  height: 420rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f9fafb;
  border-radius: 12rpx;
  gap: 20rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e5e7eb;
  border-top-color: #34D399;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #6b7280;
}

/* 信息卡片 */
.info-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 24rpx;
}

.info-header {
  margin-bottom: 20rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #34D399;
}

.info-item-desc {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.8;
}

/* 提示卡片 */
.tips-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 24rpx;
}

.tips-header {
  margin-bottom: 20rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.tip-icon {
  width: 32rpx;
  height: 32rpx;
  background: #34D399;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.6;
  flex: 1;
}

/* 动作要点卡片 */
.points-card {
  background: linear-gradient(135deg, rgba(52, 211, 153, 0.1), rgba(163, 230, 53, 0.1));
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid rgba(52, 211, 153, 0.2);
}

.points-header {
  margin-bottom: 20rpx;
}

.points-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.points-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.point-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.point-number {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #34D399, #A3E635);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.point-text {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.6;
  flex: 1;
  padding-top: 6rpx;
}



