/* 测试记录页面样式 */
.scrollarea {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 时间筛选区域 */
.filter-section {
  margin-bottom: 24rpx;
}

.filter-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.filter-count {
  font-size: 24rpx;
  color: #6b7280;
}

.filter-buttons {
  display: flex;
  gap: 16rpx;
}

.filter-btn {
  flex: 1;
  background: #f3f4f6;
  color: #6b7280;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 0;
  font-size: 26rpx;
  font-weight: 500;
}

.filter-btn.active {
  background: linear-gradient(135deg, #34D399, #A3E635);
  color: white;
}

/* 记录列表区域 */
.records-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.date-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.date-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 0 8rpx;
}

.date-icon {
  font-size: 28rpx;
}

.date-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  flex: 1;
}

.date-count {
  font-size: 24rpx;
  color: #9ca3af;
  background: #f3f4f6;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.record-card:active {
  transform: scale(0.98);
}

.record-icon-wrapper {
  margin-right: 20rpx;
}

.record-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.record-icon.phq9 {
  background: linear-gradient(135deg, #3B82F6, #2563EB);
}

.record-icon.gad7 {
  background: linear-gradient(135deg, #EF4444, #DC2626);
}

.record-icon .icon-img {
  width: 36rpx;
  height: 36rpx;
}

.record-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-type {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.record-score-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, rgba(52, 211, 153, 0.1), rgba(163, 230, 53, 0.1));
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.score-label {
  font-size: 20rpx;
  color: #34D399;
}

.score-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #34D399;
}

.record-severity {
  font-size: 26rpx;
  color: #6b7280;
}

.record-time {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.time-icon {
  font-size: 20rpx;
}

.time-text {
  font-size: 22rpx;
  color: #9ca3af;
}

.record-arrow {
  margin-left: 16rpx;
}

.arrow {
  font-size: 32rpx;
  color: #d1d5db;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.6;
  display: block;
}

