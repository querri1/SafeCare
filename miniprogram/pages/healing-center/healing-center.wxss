/* 治愈中心页面样式 */
.scrollarea {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  padding-top: 40rpx;
}

/* 治愈概览 */
.healing-overview {
  margin-bottom: 40rpx;
}

.overview-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #34D399, #A3E635);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.card-icon .icon-img {
  width: 40rpx;
  height: 40rpx;
}

.card-icon .icon {
  font-size: 36rpx;
  color: white;
}

.card-content {
  flex: 1;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 16rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background-color: #e5e7eb;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #34D399, #A3E635);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.card-action {
  margin-left: 20rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #34D399, #A3E635);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-secondary {
  background: linear-gradient(135deg, #34D399, #A3E635);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-secondary.btn-completed {
  background: #f3f4f6;
  color: #9ca3af;
}

.btn-secondary[disabled] {
  opacity: 1;
}

/* 治愈列表 */
.healing-list {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
}

.count {
  font-size: 24rpx;
  color: #6b7280;
}

.healing-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.healing-item:last-child {
  border-bottom: none;
}

.healing-item.completed {
  opacity: 0.7;
}

.healing-icon {
  width: 60rpx;
  height: 60rpx;
  background: #f3f4f6;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.healing-icon .icon {
  font-size: 28rpx;
}

.healing-icon .icon-img {
  width: 32rpx;
  height: 32rpx;
}

.healing-content {
  flex: 1;
}

.healing-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.healing-desc {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 8rpx;
}

.healing-time {
  font-size: 22rpx;
  color: #9ca3af;
  display: block;
}

.healing-status {
  margin-left: 20rpx;
}

.status-badge {
  background: #10b981;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.btn-start {
  background: #34D399;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

