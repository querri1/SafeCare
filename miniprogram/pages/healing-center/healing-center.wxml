<!--治愈中心页面-->
<navigation-bar title="治愈中心" back="{{false}}" color="black" background="#FFF"></navigation-bar>

<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <!-- 今日治愈概览 -->
    <view class="healing-overview">
      <view class="overview-card">
        <view class="card-icon">
          <text class="icon">🏃</text>
        </view>
        <view class="card-content">
          <text class="card-title">八段锦练习</text>
          <text class="card-desc">今日已完成 1/1 次</text>
          <view class="progress-bar">
            <view class="progress-fill" style="width: 100%"></view>
          </view>
        </view>
        <view class="card-action">
          <button class="btn-primary" bindtap="startExercise">开始练习</button>
        </view>
      </view>

      <view class="overview-card">
        <view class="card-icon">
          <text class="icon">🎵</text>
        </view>
        <view class="card-content">
          <text class="card-title">五音疗法</text>
          <text class="card-desc">今日已完成 0/1 次</text>
          <view class="progress-bar">
            <view class="progress-fill" style="width: 0%"></view>
          </view>
        </view>
        <view class="card-action">
          <button class="btn-primary" bindtap="startMusicTherapy">开始疗愈</button>
        </view>
      </view>

      <view class="overview-card">
        <view class="card-icon">
          <text class="icon">📋</text>
        </view>
        <view class="card-content">
          <text class="card-title">心理健康自测</text>
          <text class="card-desc">本周已完成 2/3 次</text>
          <view class="progress-bar">
            <view class="progress-fill" style="width: 67%"></view>
          </view>
        </view>
        <view class="card-action">
          <button class="btn-secondary" bindtap="startTest">开始测试</button>
        </view>
      </view>
    </view>

    <!-- 治愈列表 -->
    <view class="healing-list">
      <view class="section-title">
        <text class="title">今日治愈</text>
        <text class="count">4 项治愈</text>
      </view>

      <view class="healing-item completed" bindtap="viewExerciseDetail">
        <view class="healing-icon">
          <text class="icon">✅</text>
        </view>
        <view class="healing-content">
          <text class="healing-title">八段锦练习</text>
          <text class="healing-desc">完成一套八段锦动作</text>
          <text class="healing-time">预计 15 分钟</text>
        </view>
        <view class="healing-status">
          <text class="status-badge completed">已完成</text>
        </view>
      </view>

      <view class="healing-item" bindtap="startMusicTherapy">
        <view class="healing-icon">
          <text class="icon">🎵</text>
        </view>
        <view class="healing-content">
          <text class="healing-title">五音疗法 - 宫音</text>
          <text class="healing-desc">调节脾胃，舒缓情绪</text>
          <text class="healing-time">预计 10 分钟</text>
        </view>
        <view class="healing-status">
          <button class="btn-start">开始疗愈</button>
        </view>
      </view>

      <view class="healing-item" bindtap="startPHQ9Test">
        <view class="healing-icon">
          <text class="icon">🧠</text>
        </view>
        <view class="healing-content">
          <text class="healing-title">PHQ-9 抑郁筛查</text>
          <text class="healing-desc">评估过去两周的情绪状态</text>
          <text class="healing-time">预计 5 分钟</text>
        </view>
        <view class="healing-status">
          <button class="btn-start">开始测试</button>
        </view>
      </view>

      <view class="healing-item" bindtap="startGAD7Test">
        <view class="healing-icon">
          <text class="icon">❤️</text>
        </view>
        <view class="healing-content">
          <text class="healing-title">GAD-7 焦虑筛查</text>
          <text class="healing-desc">评估过去两周的焦虑程度</text>
          <text class="healing-time">预计 5 分钟</text>
        </view>
        <view class="healing-status">
          <button class="btn-start">开始测试</button>
        </view>
      </view>
    </view>
  </view>
</scroll-view>

