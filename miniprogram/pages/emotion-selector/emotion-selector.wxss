/* 情绪选择页面样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx 30rpx;
  padding-bottom: 120rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #6b7280;
  display: block;
}

.emotion-list {
  margin-bottom: 40rpx;
}

.emotion-group {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.emotion-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 24rpx;
}

.emotion-levels {
  display: flex;
  gap: 16rpx;
}

.emotion-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.emotion-item.selected {
  background: linear-gradient(135deg, #A3E635, #34D399);
  border-color: #34D399;
  box-shadow: 0 4rpx 12rpx rgba(52, 211, 153, 0.3);
}

.emotion-emoji {
  font-size: 48rpx;
  display: block;
  margin-bottom: 12rpx;
}

.emotion-text {
  font-size: 24rpx;
  color: #1f2937;
  text-align: center;
}

.emotion-item.selected .emotion-text {
  color: white;
  font-weight: 600;
}

.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 30rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 20rpx;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-cancel {
  background: #f3f4f6;
  color: #6b7280;
}

.btn-confirm {
  background: linear-gradient(135deg, #34D399, #A3E635);
  color: white;
}

.btn-confirm.disabled {
  background: #e5e7eb;
  color: #9ca3af;
}

