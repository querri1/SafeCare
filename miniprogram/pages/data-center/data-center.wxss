/* 数据中心页面样式 */
.scrollarea {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  padding-top: 40rpx;
}

/* 数据概览 */
.data-overview {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.data-card {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.data-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #34D399, #A3E635);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
}

.data-icon .icon-img {
  width: 36rpx;
  height: 36rpx;
}

.data-icon .icon {
  font-size: 28rpx;
  color: white;
}

.data-title {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 12rpx;
}

.data-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #1f2937;
  display: block;
  margin-bottom: 4rpx;
}

.data-unit {
  font-size: 20rpx;
  color: #9ca3af;
  display: block;
}

/* 图表区域 */
.chart-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 20;
}

.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.chart-controls {
  display: flex;
  gap: 8rpx;
}

.chart-btn {
  background: #f3f4f6;
  color: #6b7280;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
}

.chart-btn.active {
  background: #34D399;
  color: white;
}

.chart-container {
  height: 360rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 60rpx 0 20rpx 0;
  position: relative;
  overflow: visible;
}

.chart-bars {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.bar-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
}

.bar-group-checked {
  /* 已打卡的组有特殊标识 */
}

.bar-wrapper {
  position: relative;
  width: 100%;
  height: 280rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin-bottom: 60rpx;
}

.bar {
  width: 32rpx;
  background: #e5e7eb;
  border-radius: 16rpx 16rpx 0 0;
  min-height: 20rpx;
  transition: all 0.3s ease;
  position: relative;
}

.bar-checked {
  background: linear-gradient(180deg, #34D399, #A3E635) !important;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.4);
  border: 2rpx solid #4f46e5;
  width: 40rpx;
}

.check-icon {
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 32rpx;
  background: #34D399;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  z-index: 5;
}

.bar-label {
  font-size: 20rpx;
  color: #6b7280;
  font-weight: 400;
  transition: all 0.3s ease;
}

.label-checked {
  color: #34D399 !important;
  font-weight: 600;
  font-size: 22rpx;
}

.emotion-emoji {
  position: absolute;
  top: -50rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 36rpx;
  line-height: 1;
  z-index: 5;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  pointer-events: none;
}

.emotion-legend {
  margin-top: 20rpx;
  text-align: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #e5e7eb;
}

.legend-text {
  font-size: 24rpx;
  color: #6b7280;
}

/* 月视图 */
.month-container {
  padding: 20rpx 0;
}

.month-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 12rpx;
}

.month-day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  background: #f9fafb;
  position: relative;
  cursor: pointer;
  transition: all 0.2s ease;
}

.month-day.day-checked {
  background: linear-gradient(135deg, #34D399, #A3E635);
  cursor: pointer;
}

.month-day:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.day-number {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 4rpx;
}

.day-checked .day-number {
  color: white;
  font-weight: 600;
}

.day-dot {
  width: 8rpx;
  height: 8rpx;
  background: white;
  border-radius: 50%;
  position: absolute;
  bottom: 8rpx;
}

/* 评分趋势柱状图区域 */
.score-chart-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.score-chart-header {
  margin-bottom: 30rpx;
}

.score-chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.score-chart-item {
  margin-bottom: 40rpx;
}

.score-chart-item:last-child {
  margin-bottom: 0;
}

.score-chart-subtitle {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 20rpx;
  text-align: center;
}

.score-chart-section .chart-container {
  height: 360rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 60rpx 0 20rpx 0;
  position: relative;
  overflow: visible;
}

.score-chart-section .chart-bars {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.score-chart-section .bar-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
}

.score-chart-section .bar-wrapper {
  position: relative;
  width: 100%;
  height: 280rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin-bottom: 60rpx;
}

.score-chart-section .bar-score {
  width: 32rpx;
  background: #e5e7eb;
  border-radius: 16rpx 16rpx 0 0;
  min-height: 20rpx;
  transition: all 0.3s ease;
  position: relative;
}

.score-chart-section .bar-score-checked {
  background: linear-gradient(180deg, #34D399, #A3E635) !important;
  box-shadow: 0 4rpx 12rpx rgba(52, 211, 153, 0.4);
  border: 2rpx solid #34D399;
  width: 40rpx;
}

.score-value {
  position: absolute;
  top: -40rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 22rpx;
  font-weight: 600;
  color: #34D399;
  z-index: 5;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.score-chart-section .bar-label {
  font-size: 20rpx;
  color: #6b7280;
  font-weight: 400;
  transition: all 0.3s ease;
}

.score-chart-section .label-checked {
  color: #34D399 !important;
  font-weight: 600;
  font-size: 22rpx;
}

/* 测试记录 */
/* 固定提示文案 */
.score-tip-section {
  margin-bottom: 40rpx;
}

.tip-card {
  background: linear-gradient(135deg, rgba(52, 211, 153, 0.1), rgba(163, 230, 53, 0.1));
  border-radius: 16rpx;
  padding: 30rpx;
  border-left: 4rpx solid #34D399;
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.tip-icon {
  font-size: 40rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.tip-content {
  flex: 1;
}

.tip-text {
  font-size: 26rpx;
  color: #374151;
  line-height: 1.8;
  display: block;
}

.test-records {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.btn-text {
  background: none;
  border: none;
  color: #34D399;
  font-size: 24rpx;
  padding: 0;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.record-item:last-child {
  border-bottom: none;
}

.record-icon {
  width: 60rpx;
  height: 60rpx;
  background: #f3f4f6;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.record-icon .icon {
  font-size: 28rpx;
}

.record-icon .icon-img {
  width: 32rpx;
  height: 32rpx;
}

.record-content {
  flex: 1;
}

.record-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.record-desc {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 8rpx;
}

.record-date {
  font-size: 22rpx;
  color: #9ca3af;
  display: block;
}

.record-score {
  margin-left: 20rpx;
}

.score {
  font-size: 36rpx;
  font-weight: 700;
  color: #34D399;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 未登录提示 */
.login-prompt {
  background: white;
  border-radius: 16rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.prompt-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.prompt-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 16rpx;
}

.prompt-desc {
  font-size: 28rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 40rpx;
}

.btn-login {
  background: linear-gradient(135deg, #34D399, #A3E635);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: 500;
}

