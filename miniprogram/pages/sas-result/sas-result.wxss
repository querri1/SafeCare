/* SAS结果页面样式 */
.scrollarea {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 结果卡片 */
.result-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 结果展示 */
.result-display {
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.result-circle {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  border: 8rpx solid;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
  background: white;
}

.result-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.result-score {
  font-size: 72rpx;
  font-weight: 700;
  color: #1f2937;
}

.result-label {
  font-size: 24rpx;
  color: #6b7280;
}

.result-severity {
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 8rpx;
}

/* 进度条 */
.result-progress-bar {
  width: 100%;
  height: 12rpx;
  background: #e5e7eb;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.result-progress-fill {
  height: 100%;
  border-radius: 6rpx;
  transition: width 1s ease;
}

.result-progress-text {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
}

/* 结果内容 */
.result-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
}

.result-desc {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.6;
  display: block;
}

/* 详细信息 */
.detail-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.detail-header {
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.detail-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #6b7280;
}

.detail-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

/* 说明卡片 */
.info-card {
  background: linear-gradient(135deg, rgba(52, 211, 153, 0.1), rgba(163, 230, 53, 0.1));
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.info-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 20rpx;
}

.info-text {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.8;
  display: block;
  margin-bottom: 12rpx;
}

.info-text:last-child {
  margin-bottom: 0;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.action-btn.secondary {
  background: white;
  color: #6b7280;
  border: 2rpx solid #e5e7eb;
}

.action-btn.primary {
  background: linear-gradient(135deg, #34D399, #A3E635);
  color: white;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(52, 211, 153, 0.3);
}

