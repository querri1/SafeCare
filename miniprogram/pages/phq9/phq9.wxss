/* PHQ-9量表页面样式 */
.scrollarea {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 顶部说明 */
.intro-card {
  background: linear-gradient(135deg, #34D399, #A3E635);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  text-align: center;
  color: white;
}

.intro-title {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 16rpx;
}

.intro-desc {
  font-size: 26rpx;
  opacity: 0.95;
  line-height: 1.6;
  display: block;
}

/* 进度条 */
.progress-section {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
}

.progress-percent {
  font-size: 24rpx;
  color: #34D399;
  font-weight: 600;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background-color: #e5e7eb;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #34D399, #A3E635);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 题目导航 */
.question-nav {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.nav-scroll {
  white-space: nowrap;
}

.nav-items {
  display: inline-flex;
  gap: 12rpx;
}

.nav-item {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  background: #f3f4f6;
  color: #6b7280;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.nav-item.answered {
  background: #dbeafe;
  color: #3b82f6;
}

.nav-item.active {
  background: linear-gradient(135deg, #34D399, #A3E635);
  color: white;
  transform: scale(1.1);
}

/* 问题列表 */
.question-list {
  display: flex;
  flex-direction: column;
  min-height: calc(100vh - 400rpx);
  justify-content: center;
  padding: 40rpx 0;
}

.question-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  opacity: 0;
  pointer-events: none;
  position: absolute;
  width: calc(100% - 40rpx);
  left: 50%;
  transform: translateX(-50%) translateY(40rpx);
  top: 50%;
  margin-top: -200rpx;
  box-sizing: border-box;
}

.question-card.active {
  opacity: 1;
  transform: translateX(-50%) translateY(0);
  pointer-events: auto;
  position: relative;
  top: auto;
  left: 50%;
  transform: translateX(-50%);
  margin-top: 0;
  box-shadow: 0 4rpx 20rpx rgba(52, 211, 153, 0.2);
  border: 2rpx solid #34D399;
}

.question-card.hidden {
  display: none;
}

.question-header {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.question-number {
  font-size: 24rpx;
  color: #9ca3af;
}

.question-total {
  font-size: 24rpx;
  color: #9ca3af;
}

.question-text {
  font-size: 32rpx;
  color: #1f2937;
  font-weight: 500;
  line-height: 1.6;
  display: block;
  margin: 0 auto 32rpx;
  text-align: center;
  width: 100%;
}

/* 选项 */
.option-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  align-items: stretch;
}

.option-item {
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.2s ease;
  width: 100%;
  box-sizing: border-box;
}

.option-item:active {
  transform: scale(0.98);
}

.option-item--active {
  background: linear-gradient(135deg, rgba(52, 211, 153, 0.1), rgba(163, 230, 53, 0.1));
  border-color: #34D399;
}

.option-radio {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #d1d5db;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.2s ease;
}

.option-item--active .option-radio {
  border-color: #34D399;
  background: white;
}

.radio-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: transparent;
  transition: all 0.2s ease;
}

.radio-dot--active {
  background: linear-gradient(135deg, #34D399, #A3E635);
}

.option-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  text-align: left;
}

.option-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 600;
}

.option-text {
  font-size: 28rpx;
  color: #1f2937;
}

.option-item--active .option-label {
  color: #34D399;
}

.option-item--active .option-text {
  color: #1f2937;
  font-weight: 500;
}

/* 导航按钮 */
.nav-buttons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.nav-btn {
  flex: 1;
  background: white;
  color: #6b7280;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.nav-btn[disabled] {
  opacity: 0.5;
  background: #f9fafb;
}

.nav-btn:not([disabled]):active {
  background: #f3f4f6;
  border-color: #34D399;
  color: #34D399;
}

/* 提交区域 */
.submit-section {
  text-align: center;
}

.submit-btn {
  width: 100%;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #34D399, #A3E635);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(52, 211, 153, 0.3);
}

.submit-btn[disabled] {
  background: #e5e7eb;
  color: #9ca3af;
  box-shadow: none;
}

.submit-hint {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
}
