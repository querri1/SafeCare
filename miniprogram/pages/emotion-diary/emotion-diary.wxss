/* 情绪日记页面样式 */
.scrollarea {
  height: 100vh;
  background: linear-gradient(180deg, #f0fdf4 0%, #f5f5f5 100%);
}

.container {
  min-height: 100vh;
  padding: 40rpx 30rpx;
  padding-bottom: 120rpx;
  position: relative;
  overflow: hidden;
}

/* 装饰性背景 */
.decoration-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  z-index: 0;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(163, 230, 53, 0.1), rgba(52, 211, 153, 0.1));
  opacity: 0.6;
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -200rpx;
  right: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: 200rpx;
  left: -150rpx;
}

.circle-3 {
  width: 250rpx;
  height: 250rpx;
  top: 300rpx;
  right: 50rpx;
}

.diary-header {
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
  text-align: center;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.date-text {
  font-size: 44rpx;
  font-weight: 700;
  color: #1f2937;
  display: block;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #34D399, #A3E635);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hint-text {
  font-size: 28rpx;
  color: #6b7280;
  display: block;
  line-height: 1.6;
}

.daily-reminder {
  font-size: 28rpx;
  color: #34D399;
  display: block;
  line-height: 1.8;
  margin-top: 16rpx;
  padding: 20rpx;
  background: rgba(52, 211, 153, 0.1);
  border-radius: 12rpx;
  border-left: 4rpx solid #34D399;
}

/* 评分入口样式 */
.scores-entry-section {
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.score-entry-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(52, 211, 153, 0.15);
  border: 2rpx solid rgba(52, 211, 153, 0.1);
  display: flex;
  align-items: center;
  gap: 24rpx;
  transition: all 0.3s ease;
}

.score-entry-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(52, 211, 153, 0.2);
}

.score-entry-icon {
  font-size: 48rpx;
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, rgba(52, 211, 153, 0.1), rgba(163, 230, 53, 0.1));
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.score-entry-content {
  flex: 1;
}

.score-entry-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.score-entry-desc {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
  display: block;
  margin-bottom: 12rpx;
}

.score-entry-total {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 8rpx;
}

.score-entry-total .total-label {
  font-size: 24rpx;
  color: #6b7280;
}

.score-entry-total .total-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #34D399;
}

.score-entry-hint {
  font-size: 24rpx;
  color: #34D399;
  display: block;
  margin-top: 8rpx;
}

.score-entry-arrow {
  font-size: 32rpx;
  color: #9ca3af;
  flex-shrink: 0;
}

.diary-content {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(52, 211, 153, 0.15);
  position: relative;
  z-index: 1;
  border: 2rpx solid rgba(52, 211, 153, 0.1);
}

.content-header {
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0fdf4;
}

.content-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #34D399;
  display: block;
}

.diary-input {
  width: 100%;
  min-height: 450rpx;
  font-size: 32rpx;
  color: #1f2937;
  line-height: 2;
  box-sizing: border-box;
  background: transparent;
}

.input-placeholder {
  color: #d1d5db;
}

.char-count {
  text-align: right;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f3f4f6;
}

.count-text {
  font-size: 24rpx;
  color: #9ca3af;
}

.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 30rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 10;
}

.btn-save {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #34D399, #A3E635);
  color: white;
  border-radius: 16rpx;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 8rpx 20rpx rgba(52, 211, 153, 0.3);
  transition: all 0.3s ease;
}

.btn-save:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(52, 211, 153, 0.3);
}

.btn-icon {
  font-size: 36rpx;
}

