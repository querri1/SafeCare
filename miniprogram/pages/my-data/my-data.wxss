/* 我的数据页面样式 */
.scrollarea {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
}

/* 未登录提示 */
.login-prompt {
  background: white;
  border-radius: 16rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.prompt-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.prompt-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 16rpx;
}

.prompt-desc {
  font-size: 28rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 40rpx;
}

.btn-login {
  background: linear-gradient(135deg, #34D399, #A3E635);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 统计区块 */
.stats-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 30rpx;
}

/* 总体统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-card {
  text-align: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #f9fafb, #f3f4f6);
  border-radius: 12rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #34D399;
  display: block;
  margin-bottom: 12rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
}

/* 活动列表 */
.activity-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.activity-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #34D399, #A3E635);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 24rpx;
}

.activity-content {
  flex: 1;
}

.activity-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.activity-count {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
}

/* 本周/本月统计 */
.week-stats,
.month-stats {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.week-item,
.month-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.week-label,
.month-label {
  font-size: 28rpx;
  color: #6b7280;
}

.week-value,
.month-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #34D399;
}

